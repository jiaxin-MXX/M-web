<div class="XQ">
    <div class="X-title-bar">
        <div class="X-nav-back">返回</div>
        <h1 class="X-nav-title">{{result2.name}}</h1>
    </div>
    <div class='X-contain'>
        <div>
            <div class="swiper-container swiper3">
                <div class="swiper-wrapper">
                    
                </div>
                <!-- 如果需要分页器 -->
                <div class="swiper-pagination"></div>
            </div> 
            <div class='X-jies'>
                <h4>{{result2.name}}</h4>
                <p>{{result2.title}}</p>
                <div class="price"><i>¥</i> <span>{{result2.shoujia}}</span></div>
            </div>
            <div class='X-xq'>
                <div class="title-header box-line">
                    <div class="title-wrapper">商品详情</div>
                </div>
                <div>{{result2.xiangqing}}</div>
                {{each result2.tupian}}
                    <img src="{{$value}}">
                {{/each}}
            </div>
        </div>
    </div>
    
    <div class="X-bottom">
        <div class="X-bottom-c"><p class='X-p X-now'>现在购买</p></div>
        <div class="X-bottom-c"><p class='X-p X-by'>加入购物车</p></div>
    </div>
</div>